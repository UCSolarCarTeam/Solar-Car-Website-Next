generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                Int           @id @default(autoincrement())
  clerkUserId       String        @unique
  ucid              Int?
  schoolEmail       String?       @unique
  phoneNumber       String?
  firstName         String?
  lastName          String?
  fieldOfStudy      String?
  schoolYear        String?
  yearJoined        String?
  profilePictureUrl String?
  description       String?
  teamRole          AllTeamRoles?
}

model Timeline {
  id          Int      @id @default(autoincrement())
  year        Int
  monthNum    Int
  monthName   String
  description String?
  imageUrl    String?    
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  @@unique([year, monthNum])
}

model Sponsor {
  id           Int          @id @default(autoincrement())
  name         String
  logoUrl      String
  websiteUrl   String
  description  String?
  sponsorLevel SponsorLevel
}

model Recruitment {
  id          Int      @id @default(autoincrement())
  header      String
  description String
  link        String
  expiresAt   DateTime
}

enum SponsorLevel {
  Gold    @map("Gold")
  Silver  @map("Silver")
  Bronze  @map("Bronze")
  Friends @map("Friends")
}

enum AllTeamRoles {
  TeamCaptain                 @map("Team Captain")
  EngineeringTeamManager      @map("Engineering Team Manager")
  BusinessTeamManager         @map("Business Team Manager")
  SoftwareTeamManager         @map("Software Team Manager")
  SoftwareTechnicalManager    @map("Software Technical Manager")
